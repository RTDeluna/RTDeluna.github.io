---
import ContactForm from './ContactForm';
---

<section id="contact" class="section-padding">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16 reveal">
      <p class="text-accent font-mono text-sm mb-3">// get in touch</p>
      <h2 class="text-3xl md:text-4xl font-heading font-bold">
        Let's Build <span class="gradient-text">Something Great</span>
      </h2>
      <p class="text-text-secondary mt-4 max-w-lg mx-auto">
        Ready to scale your business with Meta ads, GHL automations, or a modern website? Let's talk.
      </p>
    </div>

    <div class="reveal">
      <ContactForm client:visible />
    </div>
  </div>
</section>
