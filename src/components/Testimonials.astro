---
import { testimonials } from '../data/testimonials';
---

<section id="testimonials" class="section-padding bg-bg-surface/50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16 reveal">
      <p class="text-accent font-mono text-sm mb-3">// testimonials</p>
      <h2 class="text-3xl md:text-4xl font-heading font-bold">
        What Clients <span class="gradient-text">Say</span>
      </h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials.map((t, i) => (
        <div class={`glass-hover p-6 md:p-8 flex flex-col reveal reveal-delay-${Math.min(i + 1, 5)}`}>
          <!-- Quote icon -->
          <svg class="w-8 h-8 text-accent/30 mb-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11h4v10H0z" />
          </svg>

          <!-- Quote text -->
          <p class="text-text-secondary text-sm leading-relaxed flex-grow mb-6">
            "{t.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3 pt-4 border-t border-white/[0.06]">
            <div class="w-10 h-10 rounded-full bg-gradient-accent flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
              {t.name.charAt(0)}
            </div>
            <div>
              <p class="text-text-primary font-medium text-sm">{t.name}</p>
              <p class="text-text-muted text-xs">{t.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
