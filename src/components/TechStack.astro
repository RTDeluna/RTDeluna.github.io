---
import { techCategories } from '../data/techstack';

const categoryIcons: Record<string, string> = {
  'Advertising': '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/></svg>',
  'CRM & Automation': '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>',
  'Development': '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>',
  'AI & Tools': '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>',
  'Design': '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>',
};
---

<section id="stack" class="section-padding">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16 reveal">
      <p class="text-accent font-mono text-sm mb-3">// tech stack</p>
      <h2 class="text-3xl md:text-4xl font-heading font-bold">
        Tools I <span class="gradient-text">Work With</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {techCategories.map((cat, i) => (
        <div class={`glass-hover p-6 reveal reveal-delay-${Math.min(i + 1, 5)}`}>
          <div class="flex items-center gap-3 mb-5">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center text-accent">
              <Fragment set:html={categoryIcons[cat.title] || ''} />
            </div>
            <h3 class="text-lg font-heading font-semibold text-text-primary">{cat.title}</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            {cat.tools.map((tool) => (
              <span class="text-sm px-3 py-1.5 rounded-lg bg-white/[0.03] text-text-secondary border border-white/[0.06] hover:border-accent/20 hover:text-accent-light transition-all cursor-default">
                {tool.name}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
