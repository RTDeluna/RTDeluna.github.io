---
import { metrics } from '../data/metrics';

const iconSvgs: Record<string, string> = {
  dollar: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>',
  trending: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>',
  users: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>',
  zap: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>',
  check: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>',
  heart: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>',
};
---

<section id="results" class="section-padding relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute inset-0 bg-gradient-glow opacity-50"></div>

  <div class="relative max-w-6xl mx-auto">
    <div class="text-center mb-16 reveal">
      <p class="text-accent font-mono text-sm mb-3">// results</p>
      <h2 class="text-3xl md:text-4xl font-heading font-bold">
        Numbers That <span class="gradient-text">Speak</span>
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
      {metrics.map((metric, i) => (
        <div class={`glass-hover p-6 md:p-8 text-center reveal reveal-delay-${Math.min(i + 1, 5)}`}>
          <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center text-accent mx-auto mb-4">
            <Fragment set:html={iconSvgs[metric.icon]} />
          </div>
          <div class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-2 counter-value"
               data-counter
               data-prefix={metric.prefix || ''}
               data-suffix={metric.suffix || ''}
               data-value={metric.value}>
            {metric.prefix}{metric.value}{metric.suffix}
          </div>
          <p class="text-text-secondary text-sm">{metric.label}</p>
        </div>
      ))}
    </div>

    <p class="text-center text-text-muted text-xs mt-8 reveal">
      * Metrics are approximate and based on cumulative project results
    </p>
  </div>
</section>
